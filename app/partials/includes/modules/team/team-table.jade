section.table-team.basic-table
    header.row.team-header
        div.username
        div.member-stats
            div.attribute(ng-if="issuesEnabled")
                span(translate="TEAM.COLUMN_ISSUES_REPORTED")
            div.attribute(ng-if="issuesEnabled")
                span(translate="TEAM.COLUMN_ISSUES_CLOSED")
            div.attribute(ng-if="issuesEnabled")
                span(translate="TEAM.COLUMN_ISSUES_ASSIGNED")
            div.attribute(ng-if="tasksEnabled")
                span(translate="TEAM.COLUMN_TASKS_CLOSED")
            div.attribute(ng-if="tasksEnabled")
                span(translate="TEAM.COLUMN_TASKS_ASSIGNED")
            div.attribute(ng-if="wikiEnabled")
                span(translate="TEAM.COLUMN_WIKI_PAGES_WRITTEN")

    div.hero(
        tg-team-current-user
        stats="stats"
        currentuser="currentUser"
        project="project"
        issuesEnabled="issuesEnabled"
        tasksenabled="tasksEnabled"
        wikienabled="wikiEnabled"
        owner="owner"
        ng-if="::currentUser"
        emplogenabled="employeeActivated"
    )

h2(ng-show="memberships.length")
    span(translate="TEAM.SECTION_TITLE_TEAM")
    span  {{filtersRole.name || ("TEAM.SECTION_FILTER_ALL" | translate)}}

section.table-team.basic-table(
    tg-team-members
    memberships="memberships"
    stats="stats"
    filtersq="filtersQ"
    filtersrole="filtersRole"
    issuesEnabled="issuesEnabled"
    tasksenabled="tasksEnabled"
    wikienabled="wikiEnabled"
    owner="owner"
    emplogenabled="employeeManagerActivated"
    project="project"
)
